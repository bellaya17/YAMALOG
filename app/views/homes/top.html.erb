<div class="container">

  <div class="row mt-5">
    <h2>ようこそYAMALOGへ</h2>
  </div>


  <div class="row">
    <% @post_images.last(3).each do |post_image| %>

    <div class="card w-25 mx-auto mt-5 shadow-sm">
      <div class="row no-gutters">
            <div class="card-header">
            <%= attachment_image_tag post_image.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'50x50', class:"mt-3 rounded-circle"; %>
            <%= post_image.user.name %>
            </div>

        <%= link_to post_image_path(post_image.id) do %>
          <%= attachment_image_tag post_image, :image, class:"card-img-top"; %>
        <% end %>

        <div class="card-body">
          <h5 class="card-title"><%= post_image.title %></h5>
          <h7 class="card-subtitle mb-2 text-muted"><%= post_image.created_at.strftime('%Y/%m/%d') %></h7>
          <p class="card-text"><%= post_image.text %></p>
          <%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id), class:"card-link"; %></a>
        </div>
       </div>
    </div>

  <% end %>
  </div>
  <div class="row mt-5 ">
      <div class="col text-right">
        <%= link_to "もっとみる",  post_images_path, class:"link-secondary"; %>
      </div>

  </div>


</div>