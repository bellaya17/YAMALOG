<div class="container">
  <div class="row">

    <div class="col-3">
      <%= render 'users/user', user: @user %>
    </div>


    <div class="col-9">
      <table class="table table-borderless">
        <tbody>
          <% @users.each do |user| %>
  	  	  	<tr>
  	  	  	  <td class="align-middle"><%= attachment_image_tag user, :profile_image, :fill, 70, 70, size:'60x60', format: 'jpeg', fallback: "no_image.jpg", class:"mt-3 rounded-circle";%></td>
  	  	  	  <td class="align-middle"><%= user.name %></td>
  	  	  	  <td class="align-middle">

  	  	  	    <% if current_user.following?(user) %>
                  <%= link_to "フォローをやめる", unfollow_path(user.id), method: :post %>
                <% else %>
                  <%= link_to "フォローする", follow_path(user.id), method: :post %>
                <% end %>
  	  	  	  </td>

  	  	  	  <td class="align-middle"><%= link_to "このユーザーを見る", "/users/#{user.id}" %></td>
  	  	  	</tr>
  	  	  <% end %>
        </tbody>
      </table>

    </div>

  </div>
</div>