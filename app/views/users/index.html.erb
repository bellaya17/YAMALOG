<div class="container">
  <div class="row">

    <div class="col-3">
      <%= render 'users/user', user: @user %>
    </div>


    <div class="col-9">
      <table class="table">
        <tbody>
          <% @users.each do |user| %>
  	  	  	<tr>
  	  	  	  <td><%= attachment_image_tag user, :profile_image, :fill, 70, 70, format: 'jpeg', fallback: "no_image.jpg", class:"mt-3 rounded-circle";%></td>
  	  	  	  <td><%= user.name %></td>
  	  	  	  <td>
  	  	  	    <% if current_user.following?(user) %>
                  <%= link_to "フォローをやめる", user_relationships_path(user), method: :delete %>
                <% else %>
                  <%= link_to "フォローする", user_relationships_path(user), method: :post %>
                <% end %>
  	  	  	  </td>

  	  	  	  <td><%= link_to "このユーザーを見る", "/users/#{user.id}" %></td>
  	  	  	</tr>
  	  	  <% end %>
        </tbody>
      </table>

    </div>

  </div>
</div>