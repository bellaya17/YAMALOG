<div class="container text-center mt-3">
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
  <h3><%= user.name %></h3>
  <div class="my-icons">

  <hr>
    <span>
      <%= link_to user_path(user) do %>
      <p>投稿<i class="fas fa-camera"><%= user.post_images.count %></i></p>
      <% end %>
    </span>

    <span>
      <p>フォロー<i class="fas fa-user"><%= user.follower.count %></i></p>
    </span>

    <span>
      <p>フォロワー<i class="fas fa-user"><%= user.followed.count %></i></p>
    </span>

    <span>
      <% if user.id == current_user.id %>
        <%= link_to edit_user_path(user) do %>
          <p>編集<i class="fas fa-cog"></i></p>
        <% end %>
      <% end %>
    </span>

  </div>



</div>
