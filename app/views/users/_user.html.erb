<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
  <h3><%= user.name %></h3>
  <% if current_user.following?(user) %>
    <%= link_to "Unfollow", user_relationships_path(user), method: :delete %>
  <% else %>
    <%= link_to "Follow", user_relationships_path(user), method: :post %>
  <% end %>

  <% if user.id == current_user.id %>
    <%= link_to edit_user_path(user) do %>
      <i class="fas fa-cog"></i>
  <% end %>
<% end %>