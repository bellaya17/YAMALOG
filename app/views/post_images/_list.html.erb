
<% post_images.each do |post_image| %>

<div class="card w-50 mx-auto mt-4 shadow-lg">
  <div class="row no-gutters">
        <div class="card-header pt-0　d-flex align-items-center">
        <%= attachment_image_tag post_image.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'40x40', class:"rounded-circle"; %>
        <%= post_image.user.name %>
        </div>

    <%= link_to post_image_path(post_image.id) do %>
      <%= attachment_image_tag post_image, :image, class:"card-img-top"; %>
    <% end %>

    <div class="card-body">
      <h5 class="card-title"><%= post_image.title %></h5>
      <h7 class="card-subtitle mb-2 text-muted"><%= post_image.created_at.strftime('%Y/%m/%d') %></h7>
      <p class="card-text"><%= post_image.text %></p>
      <%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id), class:"card-link"; %></a>
    </div>
   </div>
</div>

<% end %>
<%= paginate post_images %>
