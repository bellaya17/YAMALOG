<div class="container">

  <h2>投稿編集</h2>
  <%= attachment_image_tag @post_image, :image %>

  <%= form_with model:@post_image, local:true do |f| %>

  <%= f.label :タイトル %><br>
  <%= f.text_field :title, autofocus: true, :placeholder =>"#{@post_image.title}" %>

  <%= f.label :説明 %><br>
  <%= f.text_area :text, :placeholder =>"#{@post_image.text}" %>

  <%= f.submit "変更を保存" %>
  <% end %>
</div>
