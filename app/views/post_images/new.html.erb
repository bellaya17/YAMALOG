<div class="container">

  <h1>新規登録</h1>
<%= form_with model: @post_image, local:true do |f| %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>タイトル</h4>
  <%= f.text_field :title, placeholder:"タイトル" %>
  <h4>説明</h4>
  <%= f.text_area :text, placeholder:"説明を入力" %>
  <%= f.submit '投稿' %>
<% end %>

</div>
