<div class="container">
<div class="row no-gutters">
  <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center">
    <h2 class="mt-5 mb-5">新規登録</h2>

    <% if @post_image.errors.any? %>
    <%= @post_image.errors.count %>件のエラーが発生しました
    <% @post_image.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
    <% end %>

    <%= form_with model: @post_image, local:true do |f| %>

    <%= f.attachment_field :image, class: "w-100 mb-5"%>
    <div class="input-group mb-5">
      <%= f.text_field :title, class:"form-control", placeholder:"タイトル" %>
    </div>

    <div class="input-group mb-5">
      <%= f.text_area :text, class:"form-control", placeholder:"本文を入力" %>
    </div>

    <%= f.submit '投稿', class: "btn btn-info btn-lg btn-block" %>
    <% end %>
  </div>
</div>
</div>
